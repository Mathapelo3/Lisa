@page
@model LoginModel

@{
    ViewData["Title"] = "";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/themify-icons.css" rel="stylesheet" />
<link href="~/css/icofont.css" rel="stylesheet" />
<link href="~/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/jquery.mcustomscrollbar.css" rel="stylesheet" />
<link href="~/css/waves.min.css" rel="stylesheet" media="all" />
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />
<body themebg-pattern="theme1">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/lib/favicon.ico" />LISA</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
            <partial name="_Loginpartial" />
        </div>
    </nav>



</header>

<h1 class="text-center">@ViewData["Title"]</h1>
<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                
                    <form class="md-float-material form-material" id="account" method="post">
                        <div class="text-center">
                            <img src="~/lib/favicon.ico" alt="Logo"/>
                        </div>
                        <div class="auth-box card">
                            <div class="card-block">
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="text-center">Log In</h3>
                                    </div>
                                </div>
                                <hr />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group form-primary">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="float-label"></label>
                                    <span asp-validation-for="Input.Email" class="form-bar"></span>
                                </div>
                                <div class="form-floating form-group form-primary">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <span class="form-bar"></span>
                                    <label asp-for="Input.Password" class="form-label float-label"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger "></span>
                                </div>
                                <div class="row m-t-25 text-left">
                                    <div class="col-12">
                                        <div class="checkbox-fade fade-in-primary d-">
                                            <label asp-for="Input.RememberMe" class="form-label">
                                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                                <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                        <div class="forgot-phone text-right f-right">
                                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-right f-w-600"> Forgot your Password?</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Log in</button>
                                    </div>
                                </div>
                                <div>
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                    </p>
                                    <p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                    </p>
                                </div>
                        
                        
                        
                       
                            </div>
                        </div>
                
                    </form>
                
            </div>
   
        </div>
    </div>
</section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/waves.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.slimscroll.js"></script>
    <script src="~/lib/jquery/dist/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/smoothscroll.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery.mcustomscrollbar.concat.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/common-pages.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/script.js"></script>
    <script src="~/lib/bootstrap/dist/js/script.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/css-scrollbars.js"></script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
